@import "variables.styl"
@import 'globales.styl'

.contenedor
  width: 90%
  margin: auto
  
.header
  display: flex
  width: 100%
  height 100px
  justify-content: space-between
  padding: 15px 0
  align-items: center
  &__nav ul
    display: flex
  &__nav li
    list-style: none
    padding: 0 5px
    margin: 0 10px
  &__nav li a
    text-decoration: none
  &__nav li:last-child 
    margin-right: 0
    
.content
  display: grid
  grid-template-columns: 1fr 1fr
  margin: 20px 0
  &__text
    grid-column: 1
    width: 100%
    margin: auto 0
    padding-right: 35px
  &__text input
    height: 45px
    width: 55%
    margin-right: 10px
  &__text input::placeholder
    padding-left: 20px
    
  &__img
    grid-column: 2
  &__img img
    width: 100%
.button
  background: azul 
  color: white
  height: 45px
  width: 30%
  border-radius: 5px
  border: none